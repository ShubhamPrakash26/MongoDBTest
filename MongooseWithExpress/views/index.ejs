<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats</h3>
    <form action="/chats/new" method="GET">
        <button type="submit">Write a message</button>
    </form>
    <div class="chat-container">
        <% for(chat of chats) { %>
            <div class="chats">
                <form action="/chats/<%= chat._id %>/edit" method="get">
                    <button type="submit" class="edit">Edit</button>
                </form>
                <div class="from-to">
                    <p>From: <%= chat.from %></p>
                    <p>To: <%= chat.to %></p>
                </div>
                <div class="msg">
                    <p>Message: <%= chat.message %></p>
                </div>
                <p class="timestamp">Time: <%= chat.timestamp.toString().split(" ")[4] %></p>
                <p class="timestamp">Date: <%= chat.timestamp.toString().split(" ").slice(0,4).join(" ") %></p>
            </div>
        <% } %>
    </div>
</body>
</html>
